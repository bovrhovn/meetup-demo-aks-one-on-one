FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["SimpleUrlList.Web/SimpleUrlList.Web.csproj", "SimpleUrlList.Web/"]
RUN dotnet restore "SimpleUrlList.Web/SimpleUrlList.Web.csproj"
COPY . .
WORKDIR "/src/SimpleUrlList.Web"
RUN dotnet build "SimpleUrlList.Web.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "SimpleUrlList.Web.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "SimpleUrlList.Web.dll"]
